@model PointViewModel

@{
    ViewBag.Title = "Create Point";
}

@section SidebarNavigation {
    <ul>
        <li><a asp-area="Project" 
               asp-controller="@ViewBag.StructureType" 
               asp-action="Overview" 
               asp-route-projectId="@ViewBag.ProjectId">Back to Structure</a></li>
        <li><a asp-area="Project" 
               asp-controller="Points" 
               asp-action="Index" 
               asp-route-projectId="@ViewBag.ProjectId">Back to Points</a></li>
    </ul>
}

<form method="post" asp-controller="Points" asp-action="Create">
    <partial name="_FormFields" />
    <div class="form-row">
        <div asp-validation-summary="All" class="error-message"></div>
    </div>
    <hr class="main-hr" />
    <button type="submit" class="btn btn-primary">Create</button>
</form>