@model ShearForceViewModel

<div class="form-row">
    <div class=form-item>
        <label asp-for="Magnitude"></label>
        <input asp-for="Magnitude" />
        <span asp-validation-for="Magnitude" class="error-message"></span>
    </div>
    <div class="form-item">
        <label asp-for="Direction"></label>
        <select asp-for="Direction" asp-items="Html.GetEnumSelectList<Direction>()">
        </select>
        <span asp-validation-for="Direction" class="error-message"></span>
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label asp-for="LocationId"></label>
        <select asp-for="LocationId" asp-items="@Model.Points">
        </select>
        <span asp-validation-for="LocationId" class="error-message"></span>
    </div>
</div>