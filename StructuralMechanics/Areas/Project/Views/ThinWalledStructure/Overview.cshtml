@model ThinWalledStructureOverviewViewModel

@{
    ViewBag.Title = ViewBag.ProjectName;
}

@section SidebarNavigation {
    <ul>
        <li id="btnAddMenu"><button onclick="showHiddenMenu('addMenu', 'btnAddMenu')">Add</button></li>
        <li id="addMenu" style="display: none;">
            <ul class="sidebar-hidden-menu">
                <li><a asp-controller="Points" asp-action="Create" asp-route-projectId="@ViewBag.ProjectId">Point</a></li>
                <li><a asp-controller="CrossSectionParts" asp-action="Create" asp-route-projectId="@ViewBag.ProjectId">Cross-section part</a></li>
                <li><a asp-controller="StrengthMembers" asp-action="Create" asp-route-projectId="@ViewBag.ProjectId">Strength Member</a></li>
                <li><a asp-controller="ShearForces" asp-action="Create" asp-route-projectId="@ViewBag.ProjectId">Shear Force</a></li>
                <li><a asp-controller="Moments" asp-action="Create" asp-route-projectId="@ViewBag.ProjectId">Moment</a></li>
            </ul>
        </li>
        <li id="btnShowMenu"><button onclick="showHiddenMenu('showMenu', 'btnShowMenu')">Show</button></li>
        <li id="showMenu" style="display: none;">
            <ul class="sidebar-hidden-menu">
                <li><a asp-controller="Points" asp-action="Index" asp-route-projectId="@ViewBag.ProjectId">Points</a></li>
                <li><a asp-controller="CrossSectionParts" asp-action="Index" asp-route-projectId="@ViewBag.ProjectId">Cross-section parts</a></li>
                <li><a asp-controller="StrengthMembers" asp-action="Index" asp-route-projectId="@ViewBag.ProjectId">Strength Members</a></li>
                <li><a asp-controller="ShearForces" asp-action="Index" asp-route-projectId="@ViewBag.ProjectId">Shear Forces</a></li>
                <li><a asp-controller="Moments" asp-action="Index" asp-route-projectId="@ViewBag.ProjectId">Moments</a></li>
            </ul>
        </li>
        <li><button disabled>Solve</button></li>
    </ul>
}

<div class="structure-overview">
    <div class="display-construction">
        <h1 class="info-message">Structure Display: to be implemented...(Not a priority)</h1>
    </div>
    <hr class="main-hr" />
    <div class="overall-information">
        <div class="overall-information-first-column">
            <h3>Cross-section elements count: @Model.CrossSectionElementsCount</h3>
            <h4>Points count: @Model.PointsCount</h4>
            <h4>Horizontal Lines count: @Model.HorizontalLinesCount</h4>
            <h4>Vertical Lines count: @Model.VerticalLinesCount</h4>
            <h4>Slope Lines count: @Model.SlopeLinesCount</h4>
            <h4>Arcs count: @Model.ArcsCount</h4>
            <h4>Strength Members count: @Model.StrengthMembersCount</h4>
        </div>
        <div class="overall-information-second-column">
            <h3>Vector Physical Quantities count: @Model.VectorPhysicalQuantitiesCount</h3>
            <h4>Shear Forces count: @Model.ForcesCount</h4>
            <h4>Moments count: @Model.MomentsCount</h4>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/SidebarFunctions.js">
    </script>
}