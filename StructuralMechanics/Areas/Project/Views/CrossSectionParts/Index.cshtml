@model List<CrossSectionPart>

@{
    ViewBag.Title = ViewBag.ProjectName;
}

@section SidebarNavigation {
    <ul>
        <li><a asp-area="Project" 
               asp-controller="SimpleShapes" 
               asp-action="Create" 
               asp-route-projectId="@ViewBag.ProjectId">Create Simple Shape</a></li>
        <li><a asp-area="Project" asp-controller="@ViewBag.StructureType" asp-action="Overview" asp-route-projectId="@ViewBag.ProjectId">Back</a></li>
    </ul>
}

@if (Model.Any())
{
    <div class="info-cards"> 
        @foreach (var simpleShape in Model)
        {
            <div class="info-card">
                <div class="info-card-text">
                    Type: @StructuralMechanics.Utilities.EnumDisplayHelper.GetDisplayName(simpleShape.Type)
                </div>
                <div class="info-card-text">
                    First Point Coordinates: (@simpleShape.FirstPoint.X, @simpleShape.FirstPoint.Y)
                    Second Point Coordinates: (@simpleShape.SecondPoint.X, @simpleShape.SecondPoint.Y)
                </div>
                <div class="info-card-text">
                    Thickness: @simpleShape.Thickness
                </div>
                <div class="info-card-text">
                    Length: @simpleShape.Length
                </div>
                <div class="info-card-text">
                    First Moment of Area: @simpleShape.FirstMomentOfArea
                </div>
                <div class="info-card-text">
                    Second Moment of Area: @simpleShape.SecondMomentOfArea
                </div>
                <div class="info-card-buttons"> 
                    <a class="btn btn-primary" asp-controller="SimpleShapes" 
                                               asp-action="Edit" 
                                               asp-route-projectId="@ViewBag.ProjectId"
                                               asp-route-simpleShapeId="@simpleShape.Id">Edit</a>
                    <form method="post" asp-controller="SimpleShapes" 
                                        asp-action="Delete" 
                                        asp-route-projectId="@ViewBag.ProjectId"
                                        asp-route-simpleShapeId="@simpleShape.Id">
                            <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="info-message">
        <h1>There's no shapes! Create one.</h1>
        <a class="btn btn-primary" asp-controller="SimpleShapes" asp-action="Create" asp-route-projectId="@ViewBag.ProjectId">Create</a>
    </div>   
}