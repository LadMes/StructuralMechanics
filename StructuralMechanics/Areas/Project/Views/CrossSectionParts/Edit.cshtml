@model CrossSectionPartViewModel

@{
    ViewBag.Title = "Create Shape";
}

@section SidebarNavigation {
    <ul>
        <li><a asp-area="Project" 
               asp-controller="@ViewBag.StructureType" 
               asp-action="Overview" 
               asp-route-projectId="@ViewBag.ProjectId">Back to Structure</a></li>
        <li><a asp-area="Project" 
               asp-controller="CrossSectionParts" 
               asp-action="Index" 
               asp-route-projectId="@ViewBag.ProjectId">Back to Cross-Section Parts</a></li>
    </ul>
}

<form method="post" asp-controller="CrossSectionParts" asp-action="Edit" asp-route-projectId="@ViewBag.ProjectId" 
                                                                         asp-route-id="@Model.Id">
    <input hidden asp-for="Id"/>
    <partial name="_FormFields">
    <div class="form-row">
        <div asp-validation-summary="All" class="error-message"></div>
    </div>
    <hr class="main-hr" />
    <button type="submit" class="btn btn-primary">Edit</button>
</form>