@inject SignInManager<ApplicationUser> signInManager
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link id="main-css" href="~/css/main.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <header class="header">
            <div class="header-image">
                <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/bridge.png" /></a>
            </div>
            <nav class="header-nav">
                @if (!signInManager.IsSignedIn(User))
                {
                    <ul>
                        <li><a asp-area="" asp-controller="Account" asp-action="Login">Sign In</a></li>
                        <li><a asp-area="" asp-controller="Account" asp-action="Register">Sign Up</a></li>
                    </ul>
                }
                else
                {
                    <ul>
                        <li><a asp-area="" asp-controller="Projects" asp-action="Index">My Projects</a></li>
                        <li>
                            <form method="post" asp-area="" asp-controller="Account" asp-action="Logout">
                                    <button type="submit">
                                            Sign out
                                    </button>
                            </form>
                        </li>
                    </ul>
                }
            </nav>
        </header>
        <div class="inner-container">
            <div class="sidebar-inner-container">
                @if (IsSectionDefined("SidebarNavigation"))
                {
                    <div class="sidebar-nav">
                        @RenderSection("SidebarNavigation")
                    </div>
                }
            </div>
            <div class="middle-inner-container">
                @RenderBody()
            </div>
            <div class="sidebar-inner-container">

            </div>
        </div>
        <footer class="footer">
            <h3>2022</h3>
        </footer>
    </div>
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts");
    }
</body>
</html>
