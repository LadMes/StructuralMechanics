@model IEnumerable<Project>

@{
    ViewBag.Title = "My Projects";
}

@section SidebarNavigation {
    <div class="sidebar-nav">
        <ul>
            <li><a asp-controller="Projects" asp-action="Create">Create Project</a></li>
        </ul>
    </div>
}

@if (Model.Any())
{
    <div class="projects"> 
        @foreach (Project project in Model)
        {
            <div class="project-card">
                <div class="project-card-project-name">
                    Project Name: @project.ProjectName
                </div>
                <div class="project-card-structure-type">
                    Structure Type: @project.StructureType
                </div>
                <div class="project-card-buttons">
                    <a class="btn btn-primary" asp-controller="Structure" asp-action="Overview" asp-route-id="@project.StructureId">Continue</a>
                    <a class="btn btn-primary" asp-controller="Projects" asp-action="Edit" asp-route-id="@project.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Projects" asp-action="Delete" asp-route-id="@project.Id">Delete</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="info-message">
        <h1>There's no projects! Create one.</h1>
        <a asp-controller="Projects" asp-action="Create">Create</a>
    </div>   
}